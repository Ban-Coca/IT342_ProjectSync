<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/modal_background">

    <TextView
        android:id="@+id/requirement_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• At least 8 characters"
        android:textColor="#808080"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/requirement_uppercase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• At least one uppercase letter"
        android:textColor="#808080"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/requirement_lowercase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• At least one lowercase letter"
        android:textColor="#808080"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/requirement_digit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• At least one digit"
        android:textColor="#808080"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/requirement_no_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• No special characters"
        android:textColor="#808080"
        android:textSize="14sp" />
</LinearLayout>