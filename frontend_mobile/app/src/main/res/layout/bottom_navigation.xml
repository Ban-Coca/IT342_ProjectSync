<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="8dp"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/nav_home_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/home"
            android:src="@drawable/ic_home" />

        <TextView
            android:id="@+id/nav_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/gray_dark"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_projects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/nav_projects_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/projects"
            android:src="@drawable/ic_projects" />

        <TextView
            android:id="@+id/nav_projects_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Projects"
            android:textColor="@color/gray_dark"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_tasks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/nav_tasks_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/tasks"
            android:src="@drawable/ic_tasks" />

        <TextView
            android:id="@+id/nav_tasks_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks"
            android:textColor="@color/gray_dark"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>